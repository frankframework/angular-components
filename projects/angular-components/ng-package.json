{
  "$schema": "./../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/angular-components",
  "lib": {
    "entryFile": "src/public_api.ts"
  },
  "assets": [
    {
      "input": "src/assets",
      "glob": "**/*",
      "output": "assets"
    },
    {
      "input": "src",
      "glob": "_index.css",
      "output": "."
    },
    {
      "input": "src/styles",
      "glob": "**/*.css",
      "output": "styles"
    }
  ]
}
